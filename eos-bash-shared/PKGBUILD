  $_url/su-c_wrapper
  $_url/eos-wallpaper-set
  $_url/UpdateInTerminal
  $_url/UpdateInTerminal.desktop
  $_url/eos-waiting-indicator
  $_url/eos-pkginfo
  $_url/eos-pkginfo.completion
  $_url/eos-pkg-changelog
)

