  $_url/eos-waiting-indicator
  $_url/eos-pkginfo
  $_url/eos-pkginfo.completion
  $_url/eos-pkg-changelog
  $_url/eos-sendlog
  $_url/eos-kbd-set
  $_url/eos-download-wallpapers
  $_url/eos-send-gpuinfo
)

