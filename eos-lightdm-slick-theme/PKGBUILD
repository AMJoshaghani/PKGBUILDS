# Maintainer: EndeavourOS <info@endeavouros.com>
pkgname=eos-lightdm-slick-theme
pkgver=1.0
pkgrel=3
pkgdesc='EndeavourOS theme for lightdm-slick-greeter'
arch=('any')
url='https://www.endeavouros.com'
license=('GPL3')
depends=('lightdm' 'lightdm-slick-greeter')
source=('slick-greeter.conf' 'eos-lightdm-slick-theme.install')
md5sums=('SKIP' 'SKIP')
sha512sums=('SKIP' 'SKIP')
install=eos-lightdm-slick-theme.install

package() {
  cd "$srcdir/"
  mkdir -p "${pkgdir}/etc/lightdm/"
  cp slick-greeter.conf "${pkgdir}/etc/lightdm/"

  # cleanup
  cd $srcdir
  rm -rf ../${pkgname}
}
