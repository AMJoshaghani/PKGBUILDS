[Trigger]
Operation = Upgrade
Type = Package
Target = linux
Target = linux-lts
Target = linux-zen
Target = linux-hardened
Target = linux-firmware
Target = systemd*
Target = xorg-*
Target = xf86-*
Target = nvidia
Target = mvidia-dkms
Target = mvidia-*xx-dkms
Target = nvidia-*xx
Target = mvidia-*lts-dkms
Target = nvidia*-lts
Target = mesa
Target = *wayland*
Target = intel-ucode
Target = amd-ucode
Target = cryptsetup

[Action]
Description = Inform user to reboot after certain system package upgrades.
When = PostTransaction
Depends = libnotify
Exec = /usr/bin/eos-reboot-required
