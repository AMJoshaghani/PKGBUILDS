  $_url/${pkgname}-configure
  $_url/$pkgname.completion
  $_url/$pkgname.conf
  $_url/arch-news-for-you
  $_url/eos-arch-news
  $_url/$pkgname.desktop
  $_url/${pkgname}-configure.desktop
  $_url/$pkgname.timer
  $_url/$pkgname.service
  $_url/checkupdatesext
)
