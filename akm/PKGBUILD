#!/bin/bash
# Maintainer: EndeavourOS-Team <info@endeavouros.com>

pkgname=akm
pkgdesc="Arch kernel manager."
# url="https://github.com/endeavouros-team/PKGBUILDS/raw/master/$pkgname"
url="https://raw.githubusercontent.com/endeavouros-team/PKGBUILDS/master/$pkgname"
pkgver=2.7
pkgrel=3
arch=('any')
license=('GPL')
depends=(bash yad eos-bash-shared)
backup=(etc/$pkgname.conf)

source=(
    "$url/$pkgname"
    "$url/$pkgname.conf"
    "$url/$pkgname.desktop"
)
sha512sums=('b6a90650a50e91248b5a9f5acd2b3ac88247e2f2ddbb25bd7dfa22ec989a235caa342da3b2f61157218d058112df86ba012615734905cdf971f52b17167f0463'
            '2c109c185647dbb21b1ee7afbe13818515af1ab19271ac744d7888711862962f82036837b03a1385e60c81d0e321e809c024e5e54e9a2f5204b2b35bf1ccee61'
            '27ebbeb3f7965aa9fd1abc40b6ec2773375878464434721a2049ac6d1ad2852b948773a9b7a4be35e1eeaf76b67fb03bc1112432aaabe98ac3bbde85d8e47f96')

package() {
  install -Dm755 $pkgname         $pkgdir/usr/bin/$pkgname
  install -Dm644 $pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop
  install -Dm644 $pkgname.conf    $pkgdir/etc/$pkgname.conf
}
