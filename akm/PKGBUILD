#!/bin/bash
# Maintainer: EndeavourOS-Team <info@endeavouros.com>

pkgname=akm
pkgdesc="Arch kernel manager."
url="https://github.com/endeavouros-team/PKGBUILDS/raw/master/$pkgname"
pkgver=2.1
pkgrel=1
arch=('any')
license=('GPL')
depends=(bash yad)

source=(
    "$url/$pkgname"
    "$url/$pkgname.desktop"
)
sha512sums=('0afdb7d5d7b0148f7b150307ecf7bdd1a5c6d8315997c4a2869c2b8d8605425791303a05230ccc711c75f3ce6213f1649fd6db575b33d92240a853922e5abba4'
            '1eb13fe6e3edefbd1022d108832a2b295f8939d684abdba674a45453c5fbb8752a5a82743009144f7136a1f5b3cdc788c195cf56c02a8e6b59d437cef4b6fb82')

package() {
  cd $srcdir
  install -Dm755 $pkgname         $pkgdir/usr/bin/$pkgname
  install -Dm644 $pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop
}
