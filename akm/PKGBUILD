#!/bin/bash
# Maintainer: EndeavourOS-Team <info@endeavouros.com>

pkgname=akm
pkgdesc="Arch kernel manager."
url="https://github.com/endeavouros-team/PKGBUILDS/raw/master/$pkgname"
pkgver=2.4
pkgrel=1
arch=('any')
license=('GPL')
depends=(bash yad eos-bash-shared)

source=(
    "$url/$pkgname"
    "$url/$pkgname.desktop"
)
sha512sums=('ddb4a2894bedff4daca5ce1dc6981c87862e635283c335ee5d5f7c01d7a5f78f3c8268e8f01e3cbc9578714e6b0c41630843f888dbd687ec3574e311e8da4a4b'
            '27ebbeb3f7965aa9fd1abc40b6ec2773375878464434721a2049ac6d1ad2852b948773a9b7a4be35e1eeaf76b67fb03bc1112432aaabe98ac3bbde85d8e47f96')

package() {
  cd $srcdir
  install -Dm755 $pkgname         $pkgdir/usr/bin/$pkgname
  install -Dm644 $pkgname.desktop $pkgdir/usr/share/applications/$pkgname.desktop
}
