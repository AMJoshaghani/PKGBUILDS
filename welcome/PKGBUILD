# Maintainer: EndeavourOS-Team <info@endeavouros.com>

pkgname=welcome
pkgdesc="Welcome greeter for new EndeavourOS users."
pkgver=1.5
pkgrel=3
arch=('any')
license=('GPL')
depends=(bash yad)

url="https://github.com/endeavouros-team/PKGBUILDS/raw/master/$pkgname"

source=(
  $url/$pkgname
  $url/$pkgname.desktop
)
sha512sums=('2d87e990663e67935b98cbde8c5ad264fef2e6bbf77c9e2d8af32beb5f579faf50cc11e6c4cf0ba0aa9fcf98c31e34529069cd86f380db1e5addd91e780343bb'
            'cd8f07aebf7f10abdef0ad98b0974fd6d0e843d76d5eb425253c76de08fbe9d403ad24a159a518227600916be745f7d8c1effddcd58e1991d8f742659dfb2ab3')

package() {
  cd $srcdir

  install -d $pkgdir/usr/share/endeavouros/scripts
  install -Dm755 $pkgname         $pkgdir/usr/share/endeavouros/scripts/$pkgname
  install -Dm644 $pkgname.desktop $pkgdir/etc/xdg/autostart/$pkgname.desktop
}
