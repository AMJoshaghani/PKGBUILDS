# Maintainer: EndeavourOS-Team <info@endeavouros.com>

pkgname=welcome
pkgdesc="Welcome greeter for new EndeavourOS users."
pkgver=1.6
pkgrel=9
arch=('any')
license=('GPL')
depends=(bash yad)

url="https://github.com/endeavouros-team/PKGBUILDS/raw/master/$pkgname"

source=(
  $url/$pkgname
  $url/$pkgname.desktop
  $url/eos-script-lib-yad
)
sha512sums=('55f9f6d81d894088dd0957e0e4501dd13b155ad4c2191e99b6d7a55054313c627420c1c4cfad98da7e9c8c3d2f9aa2d4cd54834fec32e8f31f16d94459977385'
            '6f3dd253488a207804f64125e567837288309f75b97bc35376a37be3df6193cae01dc38adfe4471ba1a662e6d1182fa2e921d5c2c376eae99762bc91c435e02f'
            'fb1f694b3f700333814722c454fea4293f1ad6dc5c9b0c765469f37c82ad7d3d62b9e955314807d986fe7178f7127bc2be9c685c06dbf522681979d33832ae30')

package() {
  cd $srcdir

  install -d $pkgdir/usr/share/endeavouros/scripts
  install -Dm755 $pkgname            $pkgdir/usr/share/endeavouros/scripts/$pkgname
  install -Dm644 eos-script-lib-yad  $pkgdir/usr/share/endeavouros/scripts/eos-script-lib-yad
  install -Dm644 $pkgname.desktop    $pkgdir/etc/xdg/autostart/$pkgname.desktop

  install -d $pkgdir/usr/bin
  ln -s /usr/share/endeavouros/scripts/$pkgname $pkgdir/usr/bin/eos-$pkgname
}
