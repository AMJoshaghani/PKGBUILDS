# Maintainer: EndeavourOS-Team <info@endeavouros.com>

pkgname=welcome
pkgdesc="Welcome greeter for new EndeavourOS users."
pkgver=1.1
pkgrel=12
arch=('any')
license=('GPL')
depends=(bash yad)

url="https://github.com/endeavouros-team/PKGBUILDS/raw/master/$pkgname"

source=(
  $url/$pkgname
  $url/$pkgname.desktop
)
sha512sums=('af04ba15d2f2816b962d0ca38abb95666b1bba156ad2456df6f99f2a34807156ccb027865bc8ab800229fae26d009eb718ca47c54c03f25429c75f90e4707942'
            '863917c2e7acb006bed5aca03843c0e561d511c21b805b5be0c3e64ddd171ec1ecaf62083f70e02748874177ff0902ac11ba5b054f8a4d69a36582f316fd4604')

package() {
  cd $srcdir

  install -d $pkgdir/usr/share/endeavouros/scripts
  install -Dm755 $pkgname         $pkgdir/usr/share/endeavouros/scripts/$pkgname
  install -Dm644 $pkgname.desktop $pkgdir/etc/xdg/autostart/$pkgname.desktop
}
