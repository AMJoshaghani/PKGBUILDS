# Maintainer: EndeavourOS-Team <info@endeavouros.com>

pkgname=welcome
pkgdesc="Welcome greeter for new EndeavourOS users."
pkgver=1.6
pkgrel=6
arch=('any')
license=('GPL')
depends=(bash yad)

url="https://github.com/endeavouros-team/PKGBUILDS/raw/master/$pkgname"

source=(
  $url/$pkgname
  $url/$pkgname.desktop
)
sha512sums=('150980ec728f06745ca2acc285bf841874d11b181b336791e636743deb44f9c35b0068ee00436e74d8f8acb3908b53d027da2f89b505a3c1757d33bcdaeeab76'
            '6f3dd253488a207804f64125e567837288309f75b97bc35376a37be3df6193cae01dc38adfe4471ba1a662e6d1182fa2e921d5c2c376eae99762bc91c435e02f')

package() {
  cd $srcdir

  install -d $pkgdir/usr/share/endeavouros/scripts
  install -Dm755 $pkgname         $pkgdir/usr/share/endeavouros/scripts/$pkgname
  install -Dm644 $pkgname.desktop $pkgdir/etc/xdg/autostart/$pkgname.desktop
}
