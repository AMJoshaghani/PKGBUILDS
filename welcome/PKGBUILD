# Maintainer: EndeavourOS-Team <info@endeavouros.com>

pkgname=welcome
pkgdesc="Welcome greeter for new EndeavourOS users."
pkgver=1.4
pkgrel=1
arch=('any')
license=('GPL')
depends=(bash yad)

url="https://github.com/endeavouros-team/PKGBUILDS/raw/master/$pkgname"

source=(
  $url/$pkgname
  $url/$pkgname.desktop
)
sha512sums=('9d6fb5fbe848a2070999cc112c074465c22b1a4a094489f51fb21bc7433168e02dffe5c328c70e6ca6a313f9b41279adb3f7d6b0d70fd6e7555f0f613de856aa'
            '8bb178f68df004e5f9405946e3fe7dbbaf4751eeaedcc3f1d78abfa14db4f4b89177b4ef20c7451423aa51134b52d390e07ccf091ab0e0a59e143ba6c26d1fed')

package() {
  cd $srcdir

  install -d $pkgdir/usr/share/endeavouros/scripts
  install -Dm755 $pkgname         $pkgdir/usr/share/endeavouros/scripts/$pkgname
  install -Dm644 $pkgname.desktop $pkgdir/etc/xdg/autostart/$pkgname.desktop
}
