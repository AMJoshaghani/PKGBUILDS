# Maintainer: Johannes Kamprad <joekamprad@endeavouros.com>
pkgname=EndeavourOS-DE-backgrounds
pkgver=2
pkgrel=1
pkgdesc='Default EndeavourOS background images for all different DE'
arch=('any')
url='https://www.endeavouros.com'
license=('CCPL:by-nc-sa')
source=("${pkgname}-${pkgver}.tar.gz::https://github.com/endeavouros-team/${pkgname}/archive/${pkgver}.tar.gz")
md5sums=('89bf3ec4c7b6ab2a9cf975f901ca6db9')


package() {
	cd "${srcdir}/${pkgname}-${pkgver}"

	install -d "${pkgdir}/usr/share/endeavouros/backgrounds"
	install -m644 *.png "${pkgdir}/usr/share/endeavouros/backgrounds/"


	mkdir -p "${pkgdir}/usr/share/backgrounds"
	ln -sr "${pkgdir}/usr/share/endeavouros/backgrounds" "${pkgdir}/usr/share/backgrounds/endeavouros/desktops"
}
