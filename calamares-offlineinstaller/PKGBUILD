# Original Maintainer: Erik Dubois
# maintainer joekamprad <joekamprad@endeavouros.com>
pkgname=calamares-offlineinstaller
_destname="/etc/calamares"
_licensedir="/usr/share/endeavouros/licenses/"
pkgver=19.7
pkgrel=4
pkgdesc="calamares for endeavouros"
arch=('any')
url="https://github.com/endeavouros-team/calamares-offlineinstaller"
license=('GPL3')
makedepends=('git')
conflicts=('calamares-netinstaller')
depends=()
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(${_pkgname}::"git+https://github.com/endeavouros-team/${_pkgname}.git")
sha256sums=('SKIP')
install='readme.install'
package() {
	mkdir -p "${pkgdir}${_licensedir}${_pkgname}"
	mv "${srcdir}/${_pkgname}/"LICENSE "${pkgdir}${_licensedir}${_pkgname}/LICENSE"
	mkdir -p "${pkgdir}${_destname}"
	cp -r "${srcdir}/${_pkgname}/calamares/"* "${pkgdir}${_destname}"
}
