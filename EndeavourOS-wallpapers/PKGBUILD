# Maintainer: Johannes Kamprad <joekamprad@endeavouros.com>
pkgname=EndeavourOS-wallpapers
pkgver=2
pkgrel=1
pkgdesc='Default wallpapers for EndeavourOS Linux'
arch=('any')
url='https://www.endeavouros.com'
license=('CCPL:by-nc-sa')
source=("${pkgname}-${pkgver}.tar.gz::https://github.com/endeavouros-team/${pkgname}/archive/${pkgver}.tar.gz")
md5sums=('1e54169991593354516c033c6f006ae4')


package() {
	cd "${srcdir}/${pkgname}-${pkgver}"

	install -d "${pkgdir}/usr/share/endeavouros/wallpapers"
	install -m644 *.jpeg "${pkgdir}/usr/share/endeavouros/wallpapers/"
	install -m644 *.png "${pkgdir}/usr/share/endeavouros/wallpapers/"


	mkdir -p "${pkgdir}/usr/share/backgrounds"
	ln -sr "${pkgdir}/usr/share/endeavouros/wallpapers" "${pkgdir}/usr/share/backgrounds/endeavouros"
}
