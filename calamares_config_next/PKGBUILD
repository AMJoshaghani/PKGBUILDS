# Maintainer: joekamprad <joekamprad@endeavouros.com>
pkgname=calamares_config_next
pkgver=2.3
pkgrel=10
pkgdesc='EndeavourOS calamares configuration files and branding'
arch=('any')
url='https://www.endeavouros.com'
license=('GPL3')
source=('git+https://github.com/endeavouros-team/calamares_config_next.git#branch=master')
sha512sums=('SKIP')

prepare() {
 # set date for calamares_branding
    _date=$(date +%Y.%m.%d)
    sed -i $srcdir/calamares_config_next/calamares/branding/endeavouros/branding.desc \
    -e "s|^\(    version:[ ]*\).*$|\1$_date|" \
    -e "s|^\(    shortVersion:[ ]*\).*$|\1$_date|"
mkdir $srcdir/bin
cd $srcdir/bin/
wget https://raw.githubusercontent.com/endeavouros-team/install-scripts-next/master/cleaner_script.sh
wget https://raw.githubusercontent.com/endeavouros-team/install-scripts-next/master/chrooted_cleaner_script.sh
wget https://raw.githubusercontent.com/endeavouros-team/install-scripts-next/master/update-mirrorlist
wget https://raw.githubusercontent.com/endeavouros-team/install-scripts-next/master/pacstrap_calamares
chmod +x cleaner_script.sh chrooted_cleaner_script.sh update-mirrorlist pacstrap_calamares
cd $srcdir/calamares_config_next/calamares/modules
wget https://raw.githubusercontent.com/endeavouros-team/install-scripts-next/master/netinstall.yaml
wget https://raw.githubusercontent.com/EndeavourOS-Community-Editions/calamares-packagechooser/main/netinstall-ce-base.yaml
cd $srcdir
}

package() {
    install -dm 755 $pkgdir/etc/calamares
    cp -r --no-preserve=ownership $srcdir/calamares_config_next/calamares $pkgdir/etc/
    install -dm 755 $pkgdir/usr/bin
    cp -r --no-preserve=ownership $srcdir/bin $pkgdir/usr/
}
