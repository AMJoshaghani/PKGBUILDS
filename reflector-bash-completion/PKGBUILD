pkgname=reflector-bash-completion
pkgdesc="Bash completion support for 'reflector'"
pkgver=1
pkgrel=1
arch=('any')
license=('GPL')
depends=(bash-completion
         reflector)
url=https://github.com/endeavouros-team/PKGBUILDS/tree/master/$pkgname
_url="https://raw.githubusercontent.com/endeavouros-team/PKGBUILDS/master/$pkgname"

source=(
  $_url/$pkgname
)
sha512sums=('0dd24db7509a27df3c4ef5d761f3be1aa41a7232d2aaa0dbd86647d56586127a39c3b9a494a244a7187ce1796391069596dc44b4598df095f11715b85b159468')

package() {
  install -Dm644 $pkgname  $pkgdir/usr/share/bash-completion/completions/reflector
}
