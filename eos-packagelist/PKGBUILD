pkgname=eos-packagelist
pkgver=1.3
pkgrel=1
pkgdesc="An application to gather and optionally install package lists from the EndeavourOS installer"
arch=('x86_64')
license=('GPL3')
depends=('python-pyaml')
optdepends=('sudo')
source=(eos-packagelist)
